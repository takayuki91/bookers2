<h1>New book</h1>
  <%= form_with model:@book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Books</h1>
<table>
  <tr>
    <th colspan = "1" ></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= link_to "book.title",book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>