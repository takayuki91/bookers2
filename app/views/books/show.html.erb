<div class="text-success">
  <%= flash[:notice] %>
</div>

<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  <p><%= link_to "edit", edit_user_path(@user.id) %></p>
</div>

<h1>New book</h1>
  <%= form_with model:@newbook do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>
<table>
  <tr>
    <!--<td><%#= image_tag @book.user.get_profile_image(100,100) %><br>-->
    <!--<%#= link_to @book.user.name ,user_path(@user.id) %></td>-->
    <td><%= link_to user_path(@user.id) do %>
         <%= image_tag @book.user.get_profile_image(100,100) %><br>
         <%= @book.user.name %>
        <% end %></td>
    <td><%= link_to @book.title ,book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    <% end %>
  </tr>
</table>