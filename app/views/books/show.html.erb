<h1>New book</h1>
  <%= form_with model:@book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>
<table>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
    <td><%= link_to "@book.name",book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
  </tr>
</table>