<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <label for="inputtitle">Title</label>
  <%= f.text_field :title, autofocus: true %>
  <label for="inputbody">Opinion</label>
  <%= f.text_field :body %>
  <%= f.submit "Update User" %>
<% end %>

<div>
  <%= link_to "Show",book_path(@book.id) %>
  <a> | </a>
  <%= link_to "Back",books_path %>
</div>