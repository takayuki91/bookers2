<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tr></tr>
    <th><%= @user.name %></th>
    <th><%= @user.introduction %></th>
  </table>
  <p><%= link_to "edit", edit_user_path(@user.id) %></p>
</div>

<h1>New book</h1>
  <%= form_with model:@book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Users</h1>
  <table>
    <tr>
      <th>Image</th>
      <th>name</th>
      <th colspan = "1" ></th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "show",user_path(user.id) %></td>
    </tr>
  <% end %>
  </table>